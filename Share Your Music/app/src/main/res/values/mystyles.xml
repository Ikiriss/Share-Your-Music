<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MenuText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">60dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ButtonStyle" >
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">59dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/colorButton</item>

    </style>

    <style name="BackgroundStyle">
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="BackgroundStyle_light">
        <item name="android:background">@color/colorBackground_light</item>
    </style>

</resources>